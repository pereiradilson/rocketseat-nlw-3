{
  "compilerOptions": {
    "target": "es2017",                       
    "module": "commonjs",                     
    "allowJs": true,                          
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": true,                           
    "strictPropertyInitialization": false,    
    "baseUrl": "./src",                       
    "esModuleInterop": true,                  
    "experimentalDecorators": true,           
    "emitDecoratorMetadata": true,            
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true
  }
}
